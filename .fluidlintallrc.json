{
    "sources": {
        "md": ["./src/**/*.md"],
        "js": ["./src/**/*.js", "./*.js", "./functions/*.js", "./functions-common/*.js"],
        "json": ["./src/**/*.json", "./*.json"],
        "css": ["./src/css/*.css"],
        "scss": ["*.scss"]
    },
    "eslint": {
        "js": {
            "excludes": ["./src/lib/*.js"]
        }
    },
    "markdownlint": {
        "options": {
            "config": {
                "single-h1": false
            }
        }
    },
    "lintspaces": {
        "newlines": {
            "excludes": ["tests/**/images/**/*", "src/_data/*.json"]
        }
    }
}
